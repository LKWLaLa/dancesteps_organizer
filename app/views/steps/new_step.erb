<h3>New Step:</h3>

<form method="post" action="/steps">
  <label for="name">Step Name:</label>
  <input type="text" name="step[name]" id="name"> <br><br>
  <label for="level_of_mastery">Current level of mastery (1-10):</label>
  <input type="text" name="step[level_of_mastery]" id="level_of_mastery" ><br>
  <label for="notes">Notes:</label>
  <textarea name="step[notes]" id="notes" cols="30" rows="5"></textarea>


   <h4>Style:</h4>
  <% Style.all.each do |style| %>
  <label><%= style.name %></label>
    <input type="checkbox" id="<%= style.id %>"  name="step[style_ids][]" value="<%= style.id %>">
  <% end %>
  <br><br>

  <h4>Add video clip:</h4>

  <label for="video_title">Title:</label>
  <input type="text" name="video[title]" id="title"><br>
  <label for="url">URL:</label>
  <input type="text" name="video[url]" id="url"><br><br>

  <h4>Associate other video clips from library:</h4>

  <% Video.all.each do |video| %>
      <label><%= video.name %></label>
      <input type="checkbox" id="<%=video.id%>" name="step[video_ids][]" value="<%= video.id %>"><br>
    <% end %> <br><br>


  <input type="submit" value="Create Step">
</form>