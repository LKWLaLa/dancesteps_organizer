<h3><%=current_user.username%>'s Steps:</h3>

<ol>

<%@steps.each do |step|%>

  
    <li>
      <h4><a href="/steps/<%=step.id%>"><%=step.name%></a></h4>
      <p>
        Styles: <%step.styles.each do |style|%>
        <%=style.name%>
        <%end%>
        Current level of mastery: <%=step.level_of_mastery%><br>
        Notes: <%=step.notes%>
      </p>

      <p>      
        Video Links:
        <ul>
          <%step.videos.each do |video|%>
          <li><a href="<%=video.url%>"><%=video.title%></a></li>
          <%end%>
        </ul>
      </p>

    </li>


  <%end%>

  </ol>