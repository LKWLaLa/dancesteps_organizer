
<div class="container">
  <button class="btn btn-primary">
      <a href="/steps/new" style="color: white; text-decoration: none;">Add a New Step</a>
  </button>
    

    <h3 class="heading"><%=current_user.username%>'s steps:</h3>

    <ol>
      <%@steps.each do |step|%>
        <li>   
          <div class="panel panel-success">
            <div class="panel-heading"><a href="/steps/<%=step.id%>"><%=step.name%></a></div>         <div class="panel-body">

              <p class="col-sm-4">
                Styles:<br>
                 <%step.styles.each do |style|%>
                <span class="label label-info"><%=style.name%></span> 
                <%end%><br><br>
                Current level of mastery: <%=step.level_of_mastery%><br>
              </p>

              <div class="col-sm-4 well">Notes:<br> <%=step.notes%></div>

              <div class="col-sm-4">      
                Associated videos:<br>
                <ul>
                  <%step.videos.each do |video|%>
                  <li><a href="/videos/<%=video.id%>" style="text-decoration: none;"><%=video.title%></a></li>
                  <%end%>
                </ul>
              </div>

            </div> <!--panel body-->
          </div> <!--panel-->  
        </li>
      <%end%>
   </ol>

</div> <!--container-->

  
    
  