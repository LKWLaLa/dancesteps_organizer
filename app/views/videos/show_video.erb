<h3><%=@video.title%> <%if !@video.year.nil?%> (<%=@video.year%>) <%end%></h3>

<p><h4>Styles included:</h4>
<%@video.styles.each do |style|%>
  <li><%=style.name%></li>
<%end%>

<h4><a href="<%=@video.url%>">Click to Watch</a></h4>

</p>

<p>
<h4>Notes:</h4>
  <%=@video.notes%>
</p>

<p>
  <h4>Steps:</h4>
  <ol>
    <%@video.steps.each do |step|%>
    <li><a href="/steps/<%=step.id%>"><%=step.name%> </a><br>
    Current level of mastery: <%=step.level_of_mastery%>
      <ul>
        <%step.styles.each do |style|%>

        <li><%=style.name%></li>

        <%end%>
      </ul>
    </li>
    <%end%>
  </ol>
  

</p>
<button><a href="/videos/<%=@video.id%>/edit">Edit Video Info</a>

